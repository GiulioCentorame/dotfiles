# vim: filetype=bash
# Bash aliases

# Buku uses EDITOR as if it was VISUAL, so this runs the correct text editor
alias buku='EDITOR="$VISUAL" buku'

# nyx doesn't follow XDG dirs unless explicitly told to do so

alias nyx="nyx --config $XDG_CONFIG_HOME/nyxrc"

# same with svn
alias svn="svn --config-dir $XDG_CONFIG_HOME/subversion"

# convert biblatex's bcf files to bibtex's bbl for portability purposes
alias bcf2bbl='biber --output_format=bibtex --output-resolve-crossrefs'

# Use Vim keybindings with `info`
alias info='info --vi-keys'
